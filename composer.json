{
    "name": "staryPHP/kafka",
    "description": "Kafka client for php",
    "type": "library",
    "keywords": [
        "Php",
        "Kafka"
    ],
    "homepage": "",
    "license": "666",
    "require": {
        "php": ">=5.5",
        "psr/log" : "^1.0.2",
        "amphp/amp": "v1.2.2"
    },
    "autoload": {
        "psr-0": {
            "Kafka\\": "src/"
        }
