            "KafkaTest\\": "tests/",
            "KafkaExample\\": "example/"
        }
    },
    "require-dev": {
        "satooshi/php-coveralls": "dev-master",
        "phpunit/phpcov": "*",
	"monolog/monolog" : "1.22.1",
	"kmelia/monolog-stdout-handler" : "1.2.1",
        "phpunit/PHPUnit": "~4.0"
    }
}
