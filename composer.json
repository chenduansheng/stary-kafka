{
    "name": "staryphp/kafka",
    "description": "Kafka client for php",
    "type": "library",
    "keywords": [
        "Php",
        "Kafka"
    ],
    "homepage": "",
    "license": "proprietary",
    "require": {
        "php": ">=5.5",
        "psr/log" : "1.1.2",
        "amphp/amp": "v1.2.2"
    },
    "autoload": {
        "psr-0": {
            "Kafka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "KafkaTest\\": "tests/",
            "KafkaExample\\": "example/"
        }
    },
    "require-dev": {
        "satooshi/php-coveralls": "dev-master",
        "phpunit/phpcov": "*",
         "monolog/monolog" : "1.22.1",
         "kmelia/monolog-stdout-handler" : "1.2.1",
        "phpunit/phpunit": "~4.0"
    }
}
